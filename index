    <!-- Toast Container -->
    <div id="toast-container" class="fixed bottom-4 right-4 z-50 space-y-2"></div>

    <script>
        // Theme Management
        const themeToggle = document.getElementById('theme-toggle');
        const mobileThemeToggle = document.getElementById('mobile-theme-toggle');
        const html = document.documentElement;
        
        function toggleTheme() {
            if (html.classList.contains('dark')) {
                html.classList.remove('dark');
                html.classList.add('light');
                localStorage.setItem('theme', 'light');
            } else {
                html.classList.remove('light');
                html.classList.add('dark');
                localStorage.setItem('theme', 'dark');
            }
            updateCharts();
        }
        
        themeToggle?.addEventListener('click', toggleTheme);
        mobileThemeToggle?.addEventListener('click', toggleTheme);
        
        if (localStorage.getItem('theme') === 'dark') {
            html.classList.remove('light');
            html.classList.add('dark');
        }
        
        // Mobile Sidebar
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('overlay');
        
        function toggleSidebar() {
            sidebar.classList.toggle('-translate-x-full');
            overlay.classList.toggle('hidden');
        }
        
        mobileMenuBtn?.addEventListener('click', toggleSidebar);
        overlay?.addEventListener('click', toggleSidebar);
        
        // Navigation
        const navItems = document.querySelectorAll('.nav-item');
        const tabContents = document.querySelectorAll('.tab-content');
        const pageTitle = document.getElementById('page-title');
        const pageSubtitle = document.getElementById('page-subtitle');
        
        const tabInfo = {
            resumen: { title: 'Panel de Control', subtitle: 'Bienvenido de vuelta, Admin' },
            beneficiarios: { title: 'Beneficiarios', subtitle: 'Gestión de personas atendidas' },
            finanzas: { title: 'Finanzas', subtitle: 'Control presupuestario' },
            proyectos: { title: 'Proyectos', subtitle: 'Seguimiento de iniciativas' },
            capacidades: { title: 'Capacidades', subtitle: 'Evaluación organizacional' },
            evidencias: { title: 'Evidencias', subtitle: 'Documentación y archivos' },
            equipo: { title: 'Equipo', subtitle: 'Gestión de personal' },
            reportes: { title: 'Reportes', subtitle: 'Documentos descargables' }
        };
        
        function showTab(tabId) {
            tabContents.forEach(tab => tab.classList.add('hidden'));
            document.getElementById('tab-' + tabId)?.classList.remove('hidden');
            navItems.forEach(item => item.classList.remove('active'));
            document.querySelector('[data-tab="' + tabId + '"]').classList.add('active');
            if (tabInfo[tabId]) {
                pageTitle.textContent = tabInfo[tabId].title;
                pageSubtitle.textContent = tabInfo[tabId].subtitle;
            }
            if (window.innerWidth < 1024) toggleSidebar();
        }
        
        navItems.forEach(item => {
            item.addEventListener('click', (e) => {
                e.preventDefault();
                const tabId = item.getAttribute('data-tab');
                window.location.hash = tabId;
                showTab(tabId);
            });
        });
        
        window.addEventListener('hashchange', () => {
            const tabId = window.location.hash.slice(1) || 'resumen';
            showTab(tabId);
        });
        
        // Initialize
        const initialTab = window.location.hash.slice(1) || 'resumen';
        showTab(initialTab);
        
        // Charts
        let charts = {};
        
        function initCharts() {
            const isDark = html.classList.contains('dark');
            const textColor = isDark ? '#94a3b8' : '#64748b';
            const gridColor = isDark ? '#334155' : '#e2e8f0';
            
            // Beneficiarios Chart
            const ctxBen = document.getElementById('chart-beneficiarios');
            if (ctxBen) {
                charts.beneficiarios = new Chart(ctxBen, {
                    type: 'line',
                    data: {
                        labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
                        datasets: [{
                            label: 'Beneficiarios 2024',
                            data: [180, 220, 280, 320, 380, 420, 480, 520, 580, 640, 720, 800],
                            borderColor: '#0ea5e9',
                            backgroundColor: 'rgba(14, 165, 233, 0.1)',
                            fill: true,
                            tension: 0.4
                        }, {
                            label: 'Beneficiarios 2023',
                            data: [150, 180, 220, 260, 300, 340, 380, 420, 460, 500, 540, 580],
                            borderColor: '#8b5cf6',
                            backgroundColor: 'rgba(139, 92, 246, 0.1)',
                            fill: true,
                            tension: 0.4
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: { legend: { labels: { color: textColor } } },
                        scales: {
                            x: { ticks: { color: textColor }, grid: { color: gridColor } },
                            y: { ticks: { color: textColor }, grid: { color: gridColor } }
                        }
                    }
                });
            }
            
            // Programas Chart
            const ctxProg = document.getElementById('chart-programas');
            if (ctxProg) {
                charts.programas = new Chart(ctxProg, {
                    type: 'doughnut',
                    data: {
                        labels: ['Educación', 'Salud', 'Agricultura', 'Agua', 'Energía'],
                        datasets: [{
                            data: [1245, 892, 567, 320, 480],
                            backgroundColor: ['#0ea5e9', '#10b981', '#8b5cf6', '#f59e0b', '#ef4444']
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: { legend: { position: 'bottom', labels: { color: textColor } } }
                    }
                });
            }
            
            // Edad Chart
            const ctxEdad = document.getElementById('chart-edad');
            if (ctxEdad) {
                charts.edad = new Chart(ctxEdad, {
                    type: 'bar',
                    data: {
                        labels: ['0-12', '13-18', '19-35', '36-50', '51+'],
                        datasets: [{
                            label: 'Beneficiarios',
                            data: [892, 456, 723, 489, 287],
                            backgroundColor: '#0ea5e9'
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: { legend: { display: false } },
                        scales: {
                            x: { ticks: { color: textColor }, grid: { color: gridColor } },
                            y: { ticks: { color: textColor }, grid: { color: gridColor } }
                        }
                    }
                });
            }
            
            // Genero Chart
            const ctxGenero = document.getElementById('chart-genero');
            if (ctxGenero) {
                charts.genero = new Chart(ctxGenero, {
                    type: 'pie',
                    data: {
                        labels: ['Mujeres', 'Hombres'],
                        datasets: [{
                            data: [1523, 1324],
                            backgroundColor: ['#ec4899', '#3b82f6']
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: { legend: { position: 'bottom', labels: { color: textColor } } }
                    }
                });
            }
            
            // Presupuesto Chart
            const ctxPres = document.getElementById('chart-presupuesto');
            if (ctxPres) {
                charts.presupuesto = new Chart(ctxPres, {
                    type: 'bar',
                    data: {
                        labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun'],
                        datasets: [{
                            label: 'Presupuestado',
                            data: [40000, 35000, 42000, 38000, 45000, 40000],
                            backgroundColor: '#8b5cf6'
                        }, {
                            label: 'Ejecutado',
                            data: [38000, 32000, 40000, 35000, 42000, 18500],
                            backgroundColor: '#10b981'
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: { legend: { labels: { color: textColor } } },
                        scales: {
                            x: { ticks: { color: textColor }, grid: { color: gridColor } },
                            y: { ticks: { color: textColor }, grid: { color: gridColor } }
                        }
                    }
                });
            }
            
            // Gastos Chart
            const ctxGastos = document.getElementById('chart-gastos');
            if (ctxGastos) {
                charts.gastos = new Chart(ctxGastos, {
                    type: 'doughnut',
                    data: {
                        labels: ['Programas', 'Operativo', 'Personal', 'Infraestructura', 'Otros'],
                        datasets: [{
                            data: [45000, 25000, 35000, 15000, 5400],
                            backgroundColor: ['#0ea5e9', '#10b981', '#8b5cf6', '#f59e0b', '#64748b']
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: { legend: { position: 'bottom', labels: { color: textColor } } }
                    }
                });
            }
            
            // Radar Chart
            const ctxRadar = document.getElementById('chart-radar');
            if (ctxRadar) {
                charts.radar = new Chart(ctxRadar, {
                    type: 'radar',
                    data: {
                        labels: ['Gobernanza', 'Gestión Proyectos', 'Finanzas', 'RRHH', 'M&E', 'Comunicación'],
                        datasets: [{
                            label: 'Capacidad Actual',
                            data: [85, 78, 72, 68, 80, 75],
                            borderColor: '#0ea5e9',
                            backgroundColor: 'rgba(14, 165, 233, 0.2)'
                        }, {
                            label: 'Meta',
                            data: [90, 85, 85, 80, 90, 85],
                            borderColor: '#10b981',
                            backgroundColor: 'rgba(16, 185, 129, 0.1)',
                            borderDash: [5, 5]
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: { legend: { labels: { color: textColor } } },
                        scales: {
                            r: {
                                ticks: { color: textColor, backdropColor: 'transparent' },
                                grid: { color: gridColor },
                                pointLabels: { color: textColor }
                            }
                        }
                    }
                });
            }
        }
        
        function updateCharts() {
            Object.values(charts).forEach(chart => chart.destroy());
            charts = {};
            initCharts();
        }
        
        // Initialize charts on load
        initCharts();
        
        // Drag & Drop
        const dropZone = document.getElementById('drop-zone');
        const fileInput = document.getElementById('file-input');
        
        if (dropZone) {
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                });
            });
            
            ['dragenter', 'dragover'].forEach(eventName => {
                dropZone.addEventListener(eventName, () => dropZone.classList.add('dragover'));
            });
            
            ['dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, () => dropZone.classList.remove('dragover'));
            });
            
            dropZone.addEventListener('drop', (e) => {
                const files = e.dataTransfer.files;
                handleFiles(files);
            });
        }
        
        fileInput?.addEventListener('change', (e) => handleFiles(e.target.files));
        
        function handleFiles(files) {
            Array.from(files).forEach(file => {
                showToast('Archivo "' + file.name + '" subido exitosamente', 'success');
            });
        }
        
        // Toast Notifications
        function showToast(message, type = 'info') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            const colors = { success: 'bg-success', error: 'bg-danger', warning: 'bg-warning', info: 'bg-primary' };
            const icons = { success: 'ph-check-circle', error: 'ph-x-circle', warning: 'ph-warning', info: 'ph-info' };
            toast.className = colors[type] + ' text-white px-4 py-3 rounded-xl shadow-lg flex items-center gap-3 slide-in';
            toast.innerHTML = '<i class="ph ' + icons[type] + ' text-xl"></i><span>' + message + '</span>';
            container.appendChild(toast);
            setTimeout(() => toast.remove(), 3000);
        }
        
        // Export Modal
        function showExportModal() {
            document.getElementById('export-modal').classList.remove('hidden');
            document.getElementById('export-modal').classList.add('flex');
        }
        
        function closeExportModal() {
            document.getElementById('export-modal').classList.add('hidden');
            document.getElementById('export-modal').classList.remove('flex');
        }
        
        function exportData(format) {
            const data = {
                beneficiarios: 2847,
                presupuestoTotal: 250000,
                presupuestoEjecutado: 125400,
                proyectosActivos: 24,
                fechaExportacion: new Date().toISOString()
            };
            
            let content, filename, mimeType;
            
            if (format === 'json') {
                content = JSON.stringify(data, null, 2);
                filename = 'impactboard_export.json';
                mimeType = 'application/json';
            } else {
                content = 'Key,Value\nBeneficiarios,' + data.beneficiarios + '\nPresupuesto Total,' + data.presupuestoTotal + '\nPresupuesto Ejecutado,' + data.presupuestoEjecutado + '\nProyectos Activos,' + data.proyectosActivos;
                filename = 'impactboard_export.csv';
                mimeType = 'text/csv';
            }
            
            const blob = new Blob([content], { type: mimeType });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = filename;
            a.click();
            URL.revokeObjectURL(url);
            
            closeExportModal();
            showToast('Exportación completada', 'success');
        }
        
        // Search Beneficiarios
        const searchInput = document.getElementById('search-beneficiarios');
        searchInput?.addEventListener('input', (e) => {
            const term = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#tabla-beneficiarios tr');
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(term) ? '' : 'none';
            });
        });
    </script>
</body>
</html>
